{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "lib": ["es2022", "es2022.Object", "es2023"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.factory.ts",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
